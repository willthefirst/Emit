<!DOCTYPE html>
<html ng-app="emit" class="ng-scope">
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div ng-controller="AppCtrl">
      <form action="/user/gsend" method="post">
        <div class="msg-to wrapper-vert">
          <div class="wrapper-hor">
            <label for="contacts" class="msg-to__label">to:</label>
            <input name="email" id="contacts" class="msg-to__input"/>
          </div>
        </div>
        <textarea name="body" cols="30" rows="10"></textarea>
        <input type="submit">
      </form>
      <div class="authenticate hidden">
        <a class="connect" href="user/auth/google">Connect with Gmail</a>
      </div>
    </div>
    <div>
      <div class="authenticate hidden">
        <a class="connect" href="user/auth/facebook">Connect to Facebook</a>
      </div>

      <h2>Facebook</h2>
        <form action="/user/fsend" method="post">
          <label for="friends">Friends: </label>
        </form>
        <p class="msg-result">

        </p>
    </div>
    <script src="/jquery.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/app.js"></script>
    <script src="/javascripts/plugins/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.js"></script>
    <script src="/javascripts/script.js"></script>
  </body>
</html>